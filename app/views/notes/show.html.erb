<div id="title">
    <div>
        <p><%= @note.created_at %></p>
        <h1><%= @note.title %></h1>
    </div>
</div>


<div id="article_wrap">

    <div id="content">
        <p><%= @note.content %></p>
                
    </div>


    <div id="sidebar">
        
        <h2>★PV数ランキング</h2>
        <ul>
        <% @ranking_articles.each do |note| %> 
            <li><%= link_to note_path(note.id) do %><%= note.title %><span></span><% end %></li>
        <% end %>
        </ul>

    </div>
    <div class="clear"></div>
</div>

