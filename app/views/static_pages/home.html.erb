<div id="main">
    <%= image_tag("main-img.jpg", alt: "main-img")%>
</div>

<div id="article_wrap">

    <div id="article_list">

    	<% @notes.each do |note| %>        
        <div>
            <h2><%= link_to note.title , note_path(note.id) %></h2>
            <p><%= note.created_at.year %>-<%= note.created_at.month %>-<%= note.created_at.day %></p>
            <% if user_signed_in? %>
            <!--  ログイン済み　-->
            	<%= link_to "編集", edit_note_path(note.id) %>
            	<%= link_to "削除", note_path(note.id) , method: :delete %>
            <% end %>
        </div>
	    <% end %>

    </div>

    <div id="sidebar">       

        <h2>★PV数ランキング</h2>
        <ul>
        <% @ranking_articles.each do |note| %> 
            <li><%= link_to note_path(note.id) do %><%= note.title %><span></span><% end %></li>
        <% end %>
        </ul>

    </div>
    <div class="clear"></div>
</div>
